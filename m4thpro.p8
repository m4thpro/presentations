   cls()
   print("s",10,min(t-5,63),7)
   print("t",14,min(t-15,63),7)
   print("r",18,min(t-25,63),7)
   print("u",22,min(t-35,63),7)
   print("g",26,min(t-45,63),7)
   print("g",30,min(t-55,63),7)
   print("l",34,min(t-65,63),7)
   print("e",38,min(t-75,63),7)
   t=min(t+1,140)
end


function draw_6()
   cls()
   print("normal",10,63,7)
   print("ize failure",max(t-60,34),63,7)
   t=min(t+1,200)
end


function draw_7()
   cls()
   if t>40 then
      ox=rnd(3)+ox
      oy=rnd(3)+oy
      wx=rnd(3)+wx
      wy=rnd(3)+wy
      nx=rnd(3)+nx
      ny=rnd(3)+ny
   end
   print("o",ox,oy,8)
   print("w",wx,wy,11)
   print("n",nx,ny,12)
   if t<130 then
      print("    path",10,63,7)
   else
      print("    path",10+rnd(2)-1,63+rnd(2)-1,ceil(rnd(15)))
   end
   t=min(t+1,200)
end


