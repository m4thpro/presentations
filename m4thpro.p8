-- draws


function colorwarming(t)
   return ceil(t/48)
end


function draw_1()
   t =t+1
   cls()
   print("m th.pro",10,63,7)
   flicker=ceil(rnd(5))
   if flicker%5==0 then
      print("a",14,63,7) -- x-value -7
   else
      print("4",14,63,7)
   end
   print("(gramming)",42,63,colors[colorwarming(t)])
   if t==768 then t=-1 end
end


