   end
end



-- draws


function colorwarming(t)
   return ceil(t/48)
end


function draw_1()
   t =t+1
   cls()
   print("m th.pro",10,63,7)
   flicker=ceil(rnd(5))
   if flicker%5==0 then
      print("a",14,63,10) -- x-value -7
   else
      print("4",14,63,7)
   end
   print("(gramming)",42,63,colors[colorwarming(t)])
   if t==768 then t=-1 end
end


function draw_2()
   cls()
   print("math is not a spectator sport",10,63,7)
end


function draw_3()
   t =t+1
   cls()
   print("math is not a spectator sport",10,63,7)
   if t<28
   then line(40,65,40+t/2,65,8)
   elseif t<60
   then
      print("math is     a spectator sport",10,63,7)
      print("        not                  ",10,63,8)
   elseif t<90
   then
      cls()
      print("math is     a spectator sport",10,63,7)
   elseif t<122
   then
      cls()
      print("math is",10,63,7)
      print("a spectator sport",58-(t-90)/2,63,7)
   elseif t>=122
   then
      cls()
      t=123
      print("math is a spectator sport",10,63,7)
   end  
end

function draw_4()
   cls()
   --print("why?",10,63,7)
    t+=1
 	for i=0,3 do
  for j0=0,7 do
  j = 7-j0
  col = 7+j
  t1 = t + i*4 - j*2
  x = 10--cos(t0)*5
  y = 58 + j + sin(t1/50)*5
  pal(7,col)
  spr(i, 8+i*8 + x, y)
  t%=50
  end
 end
end

